                <img style="max-height: 90px; max-width: 110px" src= {{ asset('uploads/images' ~ path ~ '') }} />
            </div>
            <div>
                <a href="{{ path('deletePicture') }}" class="btn btn-default btn-xs" role="button">Usu≈Ñ</a>
